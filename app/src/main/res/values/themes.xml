<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppThemeTriolan" parent="Theme.AppCompat.NoActionBar">
        <item name="searchViewStyle">@style/MySearchViewStyle</item>
        <item name="colorPrimary">@color/actionbar_color</item>
        <item name="colorPrimaryDark">@color/actionbar_color_dark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

    </style>

    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Background for the search query section (e.g. EditText) -->
        <item name="queryBackground">@drawable/abc_textfield_search_material</item>
        <!-- Search button icon -->
        <item name="searchIcon">@drawable/abc_ic_search_api_mtrl_alpha</item>

    </style>

    <style name="TextAppearanceTriolan" parent="Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">#c50000</item>

    </style>
</resources>
