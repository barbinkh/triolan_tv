<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:orientation="vertical">


    <GridView
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnWidth="125dp"
        android:gravity="center"
        android:numColumns="auto_fit"
        android:paddingRight="5dp"
        android:scrollbarSize="2dp"
        android:scrollbarThumbVertical="@drawable/gradient_linear"
        android:stretchMode="columnWidth" />
    <!-- android:paddingRight="5dp" -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="150dp"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/imageConnectError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/transmit_error" />


        <TextView
            android:id="@+id/textConnectError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/connect_error"
            android:textColor="@color/actionbar_color"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>